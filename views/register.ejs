<head>
  <title>Register</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../stylesheets/registerPage.css"><link rel="stylesheet" href="../stylesheets/flash-msg.css">
  <script src="../javascripts/error.js" defer></script>
</head>

<body>
  <div class="bg"></div>
  <div class="container animated fadeIn">
    <center>
      <h2>
        <a href="">Register</a>
      </h2>
    </center>
    <hr>
    <form action="/register" method="post">
      <center>
        <% if(error.length> 0){ %>
          <div class="error">
            <p style="font-size: 16px; margin: 0;">
              <%= error %>
            </p>
            <i class="cross-btn bi bi-x">
              <svg xmlns="http://www.w3.org/2000/svg" width="27" height="27" fill="currentColor"
                class="bi bi-x" viewBox="0 0 16 16">
                <path
                  d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
              </svg></i>
          </div>
          <%}%>
        <div>
          <input type="text" name="fullname" placeholder="Fullname">
          <!-- <input type="email" name="email" placeholder="Email Id"> -->
          <input type="text" name="username" placeholder="Username" value="">
          <input type="password" name="password" placeholder="enter Password">
          <!-- <input type="password" name="password1" placeholder="confirm Password"> -->
        </div>
        <p class="a-link"><a href="/login">Already have an account? <span style="text-decoration: underline;">Login
              here.</span></a></p>
        <button type="submit">Register</button>
      </center>
      <br>
    </form>
</body>